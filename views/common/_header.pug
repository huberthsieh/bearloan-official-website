                ul.modal__link

                    mixin item(href, tw)
                        - href = href || 'javascript:void(0);'
                        li.modal__item
                            a(href=href)
                                span.txt
                                    span.tw
                                        | #{ tw }


                    +item('about.html', '關於我們')
                    +item('team.html', '專業團隊')
                    +item('moto.html', '機車貸款')
                    +item('car.html', '汽車貸款')
                    +item('house.html', '房屋二胎')
                    +item('article.html', '文章專欄')
                    +item('contact.html', '聯絡我們')


            .modal__bottom
                .logo__wrap
                    .img
