        h1.logo
            a.img(href='index.html')

        .nav__wrap
            .pc__menu
                ul.pc__menu__inner

                    mixin item(href, text)
                        li.pc__menu__item
                            a(href=href)
                                span.txt
                                    | #{ text }

                    +item('about.html', '關於我們')
                    +item('team.html', '專業團隊')
                    +item('moto.html', '機車貸款')
                    +item('car.html', '汽車貸款')
                    +item('house.html', '房屋二胎')
                    +item('article.html', '文章專欄')
                    +item('contact.html', '聯絡我們')

                    li.pc__menu__item.d-flex
                        span.fa-solid.fa-phone

                        a(href="javascript:void(0);")
                            span.txt 0800-818188


            #menu__wrap.menu__wrap
                .menu__trigger
                    .bar
                        span
                        span
                        span
                        span

    #modal.modal
